<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewGroup"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    android:layout_marginBottom="@dimen/spacing_medium"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <TextView
            android:id="@+id/txtTotalCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="0 کارت"
            android:fontFamily="@font/iran_sans"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/grey_500"
            app:layout_constraintBottom_toBottomOf="@+id/txtGroupName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txtGroupName" />


        <TextView
            android:id="@+id/txtGroupName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="عمومی"
            android:fontFamily="@font/iran_sans"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
            app:layout_constraintBottom_toBottomOf="@+id/viewGroupColor"
            app:layout_constraintEnd_toStartOf="@+id/viewGroupColor"
            app:layout_constraintTop_toTopOf="@+id/viewGroupColor"
            app:layout_constraintVertical_bias="1.0" />

        <View

            android:id="@+id/viewGroupColor"
            android:layout_width="@dimen/spacing_large"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/green_600"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>